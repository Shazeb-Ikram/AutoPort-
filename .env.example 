# .env.example - copy this file to .env and fill real values (DO NOT commit .env)

# SMTP (for email notifications)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
# For SMTP_PASS use an app-specific password if your provider supports it (do NOT use your account password if avoidable)
SMTP_PASS=REPLACE_WITH_REAL_PASSWORD_OR_APP_PASSWORD

# Notification recipients (comma-separated)
NOTIFY_EMAIL_TO=recipient1@example.com,recipient2@example.com

# Webhook URLs (use webhooks created for this project - rotate if leaked)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Channels to use by default: console,email,slack,discord
NOTIFY_CHANNELS=console
